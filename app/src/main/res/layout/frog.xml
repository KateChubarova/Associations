<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Froggy Apps"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"></FrameLayout>

        <com.ekaterinachubarova.associations.square_view.SquareImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frog"
            android:layout_weight="0.1"
            android:background="@drawable/ic_frog" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"></FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"></FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="7dp">

                <com.ekaterinachubarova.associations.square_view.SquareImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/view1"
                    android:background="@drawable/ic_sliptint"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Slip Tint"
                    android:id="@+id/text1"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textSize="15dp"
                    android:textColor="#4d0099" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp">

                <com.ekaterinachubarova.associations.square_view.SquareImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/view2"
                    android:background="@drawable/ic_flags"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Flags"
                    android:id="@+id/text2"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textSize="15dp"
                    android:textColor="#4d0099" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="7dp">

                <com.ekaterinachubarova.associations.square_view.SquareImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/view3"
                    android:background="@drawable/ic_slipcolor"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Slip Colors"
                    android:id="@+id/text3"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textSize="15dp"
                    android:textColor="#4d0099" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="7dp">

                <com.ekaterinachubarova.associations.square_view.SquareImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/view4"
                    android:background="@drawable/ic_anagrams"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Anagrams"
                    android:id="@+id/text4"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textSize="15dp"
                    android:textColor="#4d0099" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp">

                <com.ekaterinachubarova.associations.square_view.SquareImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/view5"
                    android:background="@drawable/ic_countries"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Countries"
                    android:id="@+id/text5"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textSize="15dp"
                    android:textColor="#4d0099" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="7dp">

                <com.ekaterinachubarova.associations.square_view.SquareImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/view6"
                    android:background="@drawable/ic_associations"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Associations"
                    android:id="@+id/text6"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textSize="15dp"
                    android:textColor="#4d0099" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></FrameLayout>
</LinearLayout>