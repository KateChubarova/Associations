<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="bottom|center"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.6"
            android:baselineAligned="false"
            android:paddingTop="20dp"
            android:gravity="center_horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"></FrameLayout>

            <com.ekaterinachubarova.associations.square_view.SquareImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/rus"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_weight="1" />

            <com.ekaterinachubarova.associations.square_view.SquareImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/eng"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"></FrameLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Associations"
            android:id="@+id/appName"
            android:layout_marginTop="15dp"
            android:textSize="40dp"
            android:textColor="#6203e6" />

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"></FrameLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></FrameLayout>

                    <com.ekaterinachubarova.associations.square_view.SquareImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/helpBtn"
                        android:background="@drawable/ic_help"
                        android:layout_weight="1.2" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"></FrameLayout>

                    <com.ekaterinachubarova.associations.square_view.SquareImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/playButton"
                        android:background="@drawable/ic_playbutton"
                        android:layout_weight="1.7" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"></FrameLayout>

                    <com.ekaterinachubarova.associations.square_view.SquareImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/rateBtn"
                        android:background="@drawable/ic_star"
                        android:layout_weight="1.2" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></FrameLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"></FrameLayout>

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:gravity="center">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></FrameLayout>

        <com.ekaterinachubarova.associations.square_view.SquareImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/frogView"
            android:background="@drawable/ic_frog"
            android:layout_weight="1.2" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></FrameLayout>

    </LinearLayout>

</LinearLayout>